{% if data.is_exist == TRUE %}
  <div class="container-fluid main-bg">
    <div class="row ">
      <div class="intro-farm">
        <div class="farm-name">
          <h3>
            WELCOME TO
            {{data.farm.name}}!</h3>
        </div>
        <div class="farm-image">
          <img src={{data.farm.farm_images}} alt="Farm Image">
        </div>
        <div class="farm-details">
          <p class="farm-description">
            {{data.farm.description}}
          </p>
        </div>
      </div>
    </div>
    <div class="feature-products position-relative bottom-margin-fp">
      <div class="row">
        <div class="feature-products-header col-12 box">
          <img class="feature-products-background" src="/sites/default/files/2023-09/secondary-3.png">
          <h1 class="text-center position-absolute top-25 start-11 fw-bold fst-italic">FEATURED PRODUCTS</h1>
        </div>
        <div class="d-flex position-absolute top-60 between">
          {% for product in data.products %}
            <div class="col-4">
              <a class="feature-items-link" href={{ "/product/" ~ product.product_id }}>
                <div class="card feature-items">
                  <div class="card-body">
                    <img class="feature-images" src={{ product.product_images[0] }}>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="store-taglines d-flex justify-content-center">
      {% for tag in data.tags %}
        <a class="ms-5 fs-4" href={{ "/taxonomy/term/" ~ tag.id }}>#{{ loop.index }}
          {{ tag.name }}</a>
      {% endfor %}
    </div>
    <div class="products">
      <div class='products-title'>
        <p>Shop Our Products</p>
      </div>
      <p class='category-name'>Ready-made</p>
      <div class="product-list">
        {% for i in 1..3 %}
          <div class="product-item">
            <img src='/modules/custom/farm_page/templates/tets1.png' alt="Farm Image" class="product-image">
            <p class="product-id">PRODUCT CODE #123ABC</p>
            <p class="product-name">test</p>
            <p class="product-description">This sets the maximum height for the paragraph container to accommodate two lines of text.</p>
            <p class="product-price">$7</p>
          </div>
        {% endfor %}
      </div>
      <div class="view-all">
        <button>View all</button>
      </div>
    </div>
  </div>
{% else %}
  {{ message }}
{% endif %}
